<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/img_language"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button_white_50"
        android:padding="5dp"
        android:src="@drawable/ic_vn"
        app:layout_constraintBottom_toBottomOf="@id/ll_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_text" />

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/img_select"
        app:layout_constraintStart_toEndOf="@id/img_language"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_name_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếng Việt"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_name_language_convert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vietnamese"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_circle_1"
        app:layout_constraintBottom_toBottomOf="@id/ll_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_text" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.01dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ll_text" />
</androidx.constraintlayout.widget.ConstraintLayout>


